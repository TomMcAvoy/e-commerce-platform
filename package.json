
{
  "name": "whitestart-system-security",
  "version": "1.0.0",
  "description": "Whitestart System Security - Premiumhub: Secure multi-vendor e-commerce platform with dropshipping integration",
  "main": "dist/index.js",
  "scripts": {
    "setup": "npm install && npm run create-env && npm run build",
    "create-env": "node -e \"require('fs').copyFileSync('.env.example', '.env', require('fs').constants.COPYFILE_EXCL)\" || echo \".env already exists, skipping.\"",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev:all": "concurrently \"npm:dev:server\" \"npm:dev:frontend\"",
    "dev:server": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "dev:frontend": "next dev --port 3001",
    "clean": "rimraf dist src/**/*.js src/**/*.js.map",
    "clean:all": "npm run clean && (cd frontend && npm run clean)",
    "rebuild": "rimraf node_modules package-lock.json && npm install",
    "rebuild:all": "npm run rebuild && (cd frontend && npm run rebuild)",
    "teardown": "rimraf node_modules frontend/node_modules dist frontend/.next \"src/**/*.js\" \"src/**/*.js.map\" logs coverage",
    "dev:server:clean": "npm run clean && npm run dev:server",
    "find:js": "find . -path ./node_modules -prune -o -name \"*.js\" -print",
    "stop": "lsof -ti:3000,3001 | xargs kill",
    "kill": "lsof -ti:3000,3001 | xargs kill -9",
    "seed": "ts-node src/seeder.ts",
    "unseed": "ts-node src/seeder.ts -d",
    "seed:db": "node scripts/seed-database.js",
    "check:mongodb": "node scripts/check-mongodb.js",
    "test": "npm run test:api",
    "test:api": "newman run ./tests/postman_collection.json -e ./tests/postman_environment.json"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "concurrently": "^8.2.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.1",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "slugify": "^1.6.6",
    "supertest": "^7.1.4",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.11",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.4",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "keywords": [
    "e-commerce",
    "dropshipping",
    "typescript",
    "express",
    "nextjs"
  ],
  "author": "Thomas McAvoy",
  "license": "MIT"
}