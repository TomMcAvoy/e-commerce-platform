{
  "name": "whitestart-system-security",
  "version": "1.0.0",
  "description": "E-Commerce Platform with Dropshipping Integration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev:server": "nodemon src/index.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev:frontend\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "seed": "ts-node src/seed.ts",
    "seed:full": "ts-node -e \"import { DatabaseSeeder } from './src/seeders/DatabaseSeeder'; new DatabaseSeeder().seedAll();\"",
    "db:clear": "ts-node -e \"import { DatabaseSeeder } from './src/seeders/DatabaseSeeder'; new DatabaseSeeder().clearAll();\"",
    "db:reset": "ts-node -e \"import { DatabaseSeeder } from './src/seeders/DatabaseSeeder'; new DatabaseSeeder().resetAll();\"",
    "clean:all": "rimraf dist node_modules frontend/node_modules frontend/.next",
    "reset:all": "npm run clean:all && npm install && cd frontend && npm install && cd .. && npm run build",
    "setup": "npm install && cd frontend && npm install && cd .. && cp .env.example .env && npm run build",
    "kill": "pkill -f 'nodemon src/index.ts' && pkill -f 'next dev' || true"
  },
  "dependencies": {
    "@types/hpp": "^0.2.6",
    "@types/stripe": "^8.0.416",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.4",
    "puppeteer": "^24.15.0",
    "redis": "^4.6.7",
    "slugify": "^1.6.6",
    "stripe": "^13.11.0",
    "swagger-jsdoc": "^6.2.8",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.5.0",
    "@types/nodemailer": "^6.4.9",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.4",
    "concurrently": "^8.2.0",
    "jest": "^29.6.2",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.0.1",
    "playwright": "^1.54.1",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
